@model IEnumerable<BestHackerNews.Models.NewsItem>
@{
    ViewBag.App = "Best Hacker News";
}

<form>
    <p>
        Title: <input type="text" name="filterString" value="@ViewBag.filterString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
           @Html.DisplayNameFor(model => model.By)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.By)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
    </tr>
}

</table>
